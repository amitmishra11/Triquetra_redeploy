<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <!-- For icons -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
    integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&family=Roboto&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="css/style.css">

  <!-- title -->
  <link rel="icon" href="/images/favicon.png" sizes="256x256">
  <title>P2p</title>

  <style type="text/css">
    * {
      font-family: var(--text);
    }

    a {
      text-decoration: none !important;
      font-family: var(--title);
      color: #111;
    }

    :root {
      --title: "Playfair Display", sans-serif;
      --text: "Roboto", sans-serif;
      --green: #0e6621;
      --blue: #f0e2e7;
    }

    label,
    input[type="submit"] {
      font-family: 'Playfair Display', sans-serif;
      font-size: 18px;
    }

    .col-lg-6 input #login:hover {
      background-color: #f0f0f0;
      color: var(--green);
    }

    input {
      font-family: 'Roboto', sans-serif;
      font-size: 18px;
    }

    .col-lg-6 a button,
    .col-lg-6 button {
      font-family: 'Oswald', sans-serif;
      background-color: var(--green);
      color: #fff;
      text-decoration: none;
      font-size: 18px;
      padding: 10px 18px;
    }

    .col-lg-6 a button:hover,
    .col-lg-6 button:hover {
      background-color: #fff;
      border: 2px solid var(--green);
      color: var(--green);
      padding: 9px 17px;
    }
  </style>
</head>

<body>

    <%- include('include/_navbar') %>

  <div class="container-fluid">
    <div class="row">
      <!-- Banner Start -->
      <div class="col-lg-5 p-5"
        style="background-image: linear-gradient(to right, #002927, var(--green), #8ABA9E); color: #fff; height: 100vh;">
        <br><br><br>
        <div class="row">
          <div class="col-2">
            <i class="fas fa-hand-holding-usd" style="font-size: 30px;"></i>
          </div>
          <div class="col-10">
            <h5>T1</h5>
          </div>
        </div>
        <div class="row pt-5 mt-4">
          <div class="col-2">
            <i class="fas fa-hands-helping" style="font-size: 30px;"></i>
          </div>
          <div class="col-10">
            <h5>T2s</h5>
          </div>
        </div>
        <div class="row pt-5 mt-4">
          <div class="col-2">
            <i class="fas fa-percent" style="font-size: 30px;"></i>
          </div>
          <div class="col-10">
            <h5>T3</h5>
          </div>
        </div>
        <div class="row pt-5 mt-4">
          <div class="col-2">
            <i class="fas fa-sync-alt" style="font-size: 30px;"></i>
          </div>
          <div class="col-10">
            <h5>T4</h5>
          </div>
        </div>
      </div>
      <!-- Banner End -->
      <div class="col-lg-1"></div>
    

      <div class="col-lg-6 mt-2">
        <h1 style="font-family: var(--title); font-size: 40px; color: var(--green);" class="pl-5 ml-2 pt-md-5 mt-md-5">
          Login</h1>
        <div class="row">
          <div class="col-1"></div>
          <div class="col-7 mt-3">
            <label>Your Email</label>
            <input type="text" placeholder="Enter your Email" class="form-control" id="email" required><br>
            <label>Password</label>
            <input type="password" placeholder="Enter Password" class="form-control" id="password" required><br>
            <button class="btn btn-large px-4 py-1" type="submit" onclick="login()">Login</button>
            <br>
            <br>
            <a href="/auth/google" class="btn btn-primary"><i class="fab fa-google left"></i>  Log in with Google</a>
          </div>      
          <div class="col-4"></div>
        </div>
        <a href="/forgotPass">
          <h1 style="font-family: 'Playfair Display', sans-serif; font-size: 18px;" class="pl-5 ml-3 pt-4">Forgot
            Password?</h1>
        </a>

        <h1 style="font-family: 'Playfair Display', sans-serif; font-size: 20px; color: #011D30;"
          class="pl-5 ml-3 pt-5">Don't have an account? <a href="/signup">Register</a></h1>
      </div>
    </div>
  </div>
</body>

</html>